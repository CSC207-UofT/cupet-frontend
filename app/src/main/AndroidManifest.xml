<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.example.cupetfrontend">
   <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true"
            android:theme="@style/Theme.CupetFrontEnd" tools:targetApi="m">

        <activity android:name=".ui.splash_screen.SplashScreenActivity"
                  android:label="SplashScreenActivity"
                  android:theme="@style/Theme.AppCompat.NoActionBar"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
      
        <activity
                android:name=".ui.login.LoginActivity"
                android:label="@string/title_activity_login"
                android:theme="@style/Theme.AppCompat.NoActionBar"
                android:exported="true">
        </activity>
        <activity android:name=".ui.register.RegisterActivity"
                  android:label="RegisterActivity"
                  android:theme="@style/Theme.AppCompat.NoActionBar"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.RegisterActivity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.create_pet.CreatePetActivity"
            android:label="CreatePetActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.CreatePetActivity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.edit_pet.EditPetActivity"
            android:label="EditPetActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.EditPetActivity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.pet_profile.PetProfileActivity"
            android:label="PetProfileActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PetProfileActivity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity
                android:name=".MainActivity"

                android:label="@string/app_name"
                android:theme="@style/Theme.CupetFrontEnd.NoActionBar">
        </activity>
    </application>

</manifest>
