<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cupetfrontend">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CupetFrontEnd"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".EditUserProfileActivity"></activity>
        <activity android:name=".UserAccountActivity" />
        <activity android:name=".EditUserAccountActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.CupetFrontEnd.NoActionBar" />
        <activity
            android:name=".ui.splash_screen.SplashScreenActivity"
            android:exported="true"
            android:label="SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="true"
            android:label="RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.create_pet.CreatePetActivity"
            android:exported="true"
            android:label="Create a New Pet">
            <intent-filter>
                <action android:name="android.intent.action.CreatePetActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.edit_pet.EditPetActivity"
            android:exported="true"
            android:label="EditPetActivity">
            <intent-filter>
                <action android:name="android.intent.action.EditPetActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.pet_profile.PetProfileActivity"
            android:exported="true"
            android:label="PetProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.PetProfileActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>