<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cupetfrontend">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CupetFrontEnd"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CupetFrontEnd.NoActionBar"
            android:label="@string/title_activity_main" />

        <activity android:name=".ui.splash_screen.SplashScreenActivity"
            android:label="SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="true"
            android:label="RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ui.create_pet.CreatePetFragment"
            android:label="Create a New Pet"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.CreatePetActivity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.edit_pet.EditPetFragment"
            android:label="EditPetActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.EditPetActivity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.my_pet_profile.PetProfileFragment"
            android:label="PetProfileActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PetProfileActivity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.get_matches.GetMatchesFragment"
            android:exported="true"
            android:label="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.view_my_pets.ViewMyPetsFragment"
            android:exported="true"
            android:label="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>