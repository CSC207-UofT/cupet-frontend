<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CupetFrontEnd" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/tinder_pink</item>
        <item name="colorPrimaryDark">@color/tinder_pink_dark</item>
        <item name="colorAccent">@color/tinder_pink_gray</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/tinder_pink_dark</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.CupetFrontEnd.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CupetFrontEnd.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CupetFrontEnd.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>