<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DisplayPetProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/pet_profile_picture"
            android:foregroundGravity="top"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/pet_heading"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="196dp"
            android:fontFamily="@font/quicksand"
            android:text="@string/pet_name_age"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pet_bio"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breed"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/quicksand"
            android:text="@string/pet_bio" />

        <TextView
            android:id="@+id/breed"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pet_heading"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="326dp"
            android:fontFamily="@font/quicksand"
            android:text="@string/pet_breed" />

    </RelativeLayout>




</FrameLayout>